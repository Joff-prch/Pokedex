{% include '/template/head.twig'%}
<body>
	<a href="/" onclick="disconnect()">DÃ©connexion</a>
	<h1 class="text-center mt-5">Pokedex 2000</h1>
	<div class="main_content">
		<div class="main_header">
			<h2>Total Pokemon : {{totalPokemons}} (current : {{currentPokemons}} )</h2>
			<div>badge : {{badges}}</div>
			<a href="/addPokemon" class="add_pokemon">Ajouter un Pokemon</a>
		</div>
		{% block main %}{% endblock %}
		<div class="main_body_card">
		{% for pokemon in pokemons %}
			<div class="col-md-3 card">
				<div class="card-body">
					<h5 class="card-title text-center">{{pokemon.name}}</h5>
					<p class="card-text text-center">Attack Power: {{pokemon.dps}}</p>
					<p class="card-text text-center">Health: {{pokemon.pv}}</p>
					<div class="row">
						<div class="col-md-12 text-center">
							<a href="/updatePokemon/{{pokemon._id}}" class="btn btn-primary ">modifer</a>
							<a href="/deletePokemon/{{pokemon._id}}" class="btn btn-danger ">supprimer</a>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
		</div>
	</div>

	<script src='./main.js'></script>
</body></html>
