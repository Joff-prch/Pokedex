{% extends "./../main.twig" %}

{% block main %}
<div class="container mt-5">
<div class="row">
{% for pokemon in pokemons %}
    <div class="col-md-3 card mx-auto">
        <div class="card-body">
            <h5 class="card-title text-center">{{pokemon.pv}} {{pokemon.dps}}</h5>
            <p class="card-text text-center">{{pokemon.name}}</p>
            <div class="row">
                <div class="col-md-12 text-center">
                    <a href="/updatePokemon/{{pokemon.id}}" class="btn btn-primary ">modifer</a>
                    <a href="/deletePokemon/{{pokemon.id}}" class="btn btn-danger ">supprimer</a>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
</div>
</div>
{% endblock %}